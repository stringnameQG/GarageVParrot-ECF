{% extends 'base.html.twig' %}

{% block title %}View index{% endblock %}

{% block body %}
    <h1>View index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>FirstName</th>
                <th>Comment</th>
                <th>Score</th>
                <th>Valid√©e</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for view in views %}
            <tr>
                <td>{{ view.id }}</td>
                <td>{{ view.name }}</td>
                <td>{{ view.firstName }}</td>
                <td>{{ view.comment }}</td>
                <td>{{ view.score }}</td>
                <td>{{ view.active }}</td>
                <td>
                    <a href="{{ path('app_view_show', {'id': view.id}) }}">show</a>
                    <a href="{{ path('app_view_edit', {'id': view.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_view_new') }}">Create new</a>
{% endblock %}
