{% extends 'base-2.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/accueil/accueil.css') }}">
{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('app') }}
{% endblock %}

{% block main %}
	{% if serves is not null %}
	<div class="services">
		<h2 class="services__title">Nos services proposés</h2>
		{% for serve in serves %}
			<p class="services__service-name">. {{ serve.serveName }}</p>
		{% endfor %}
		<hr>
	</div>
	{% endif %}
	<div class="vehicules">
		<h2 class="vehicules__title">Nos véhicules</h2>
		<p class="vehicules__text">Notre garage à pour spécialités la réparation et remise en état de véhicule d’occasion</p>
		<hr>
	</div>
	<div class="avis">
		<h2 class="avis__title">Avis clients</h2>
		{% for view in views %}
			{% if view.active == 1 %}
				<div class="avis__commentaire-affichage">
					<p class="services__service-name">{{ view.firstName }} {{ view.name }}</p>
					<p class="services__service-score">{{ view.score }}/5</p>
					<span class="services__service-comment">{{ view.comment }}</span>
				</div>
			{% endif %}
		{% endfor %}
		<div class="avis__commentaire-btn">
			<button class="avis__commentaire-btn__item">Plus de commentaires</button>
			<button class="avis__commentaire-btn__item">Ajouter votre commentaire</button>
		</div>
	</div>
{% endblock %}